generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  username     String
  password     String
  role         String
  orders       Order[]    //One User can place many orders
}

model Product {
  id           Int        @id @default(autoincrement())
  name         String
  description  String
  location     String
  orderDetails OrderDetail[]
  orderId      Int      
  order        Order      @relation(fields: [orderId], references: [id])
  inventory    Inventory[]//Product can be tracked in many inventories
}

model Inventory {
  id           Int        @id @default(autoincrement())
  productId    Int        
  product      Product    @relation(fields: [productId], references: [id])
  quantity     Int
}

model Order {
  id           Int        @id @default(autoincrement())
  status       String
  creationDate DateTime
  orderDetails OrderDetail[]//Order can have multiple productsDetails 
  shipments    Shipment[] //Order can be in multiple shipments
  product      Product[]  //Order can have multiple Products
  userId       Int        
  user         User       @relation(fields: [userId], references: [id])
}

model OrderDetail {
  id           Int        @id @default(autoincrement())
  quantity     Int
  orderId      Int
  order        Order      @relation(fields: [orderId], references: [id])
  productId    Int
  product      Product    @relation(fields: [productId], references: [id])
}

model Shipment {
  id           Int        @id @default(autoincrement())
  status       String
  shippedDate  DateTime
  orderId      Int
  order        Order      @relation(fields: [orderId], references: [id])
}
